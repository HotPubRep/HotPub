<!-- views/coordenate/new.ejs -->
<br>
<br>
<div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3 centered-form">
          <form action="/admin/coordenate/edit/<%= coordenate._id %>/" method="POST">
          <div class="form-group">
            <label for="country">European Country</label>
            <input type="text" name="country" class="form-control" value="<%= coordenate.country%>" >
          </div>
          <div class="form-group">
            <label for="latitud">Latitud</label>
            <input type="number" step=any name="latitud" class="form-control" value="<%= coordenate.lat%>">
          </div>
          <div class="form-group">
            <label for="longitud">Longitud</label>
            <input type="number" step=any name="longitud" class="form-control" value="<%= coordenate.lng%>"></input>
          </div>
          <div class="form-group">
            <label for="radio">Radio</label>
            <input type="number" step=any name="radio" class="form-control" value="<%= coordenate.rad%>"></input>
          </div>
          <div class="form-group">
            <label for="radUnits">Radio units</label><br>
            <select name="radUnits" id="radUnits" value="<%= coordenate.radUnits%>">
                <option value="km">km</option>
                <option value="mi">mi</option>
            </select>
          </div>
          <div class="form-group">
              <button type="submit" class="btn btn-primary">Update Coordenate</button>
          </div>
        </form>
      </div>
    </div>
  </div>